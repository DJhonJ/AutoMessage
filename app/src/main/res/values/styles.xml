<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonTextWhatsAlarm" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarWhatsAlarm" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#202020</item>
    </style>

    <style name="CardWhatsAlarm">
        <item name="cardBackgroundColor">#282A2C</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="color">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AlertDialogWhatsAlarm" parent="Theme.AppCompat.Dialog.Alert">
        <item name="buttonStyle">@style/ButtonTextWhatsAlarm</item>
        <item name="backgroundColor">#FF0000</item>
        <item name="android:alertDialogStyle">@style/ButtonTextWhatsAlarm</item>
        <item name="android:alertDialogTheme">@style/AlertDialogWhatsAlarm</item>
    </style>
</resources>